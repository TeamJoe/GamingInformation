#/etc/systemd/system
[Unit]
Description=Bazarr Subtitle Manager
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
User=bazarr
Group=docker
ExecStart=/home/bazarr/bazarr.sh start
ExecStop=/home/bazarr/bazarr.sh stop
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
