#/etc/systemd/system
[Unit]
Description=A Minecraft SkyFactory 4.2.2 Server

[Service]
Type=simple
Restart=always
RestartSec=5
User=minecraft
ExecStart=/home/minecraft/SkyFactory4Server.sh start -connect false -output on -service true -port 45570
ExecReload=/home/minecraft/SkyFactory4Server.sh restart -connect false -output on -service true -port 45570
ExecStop=/home/minecraft/SkyFactory4Server.sh stop -connect false -output on -service true

[Install]
WantedBy=multi-user.target
