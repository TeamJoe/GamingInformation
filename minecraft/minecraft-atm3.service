[Unit]
Description=A Minecraft ATM3 Server

[Service]
Type=simple
Restart=always
RestartSec=5
User=minecraft
ExecStart=/home/minecraft/ATM3Server.sh start -connect false -output on -service true -port 25565
ExecStop=/home/minecraft/ATM3Server.sh stop -connect false -output on -service true

[Install]
WantedBy=multi-user.target
